<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1f000000"
        android:layout_weight="1"
        android:text="显示结果"
        android:textSize="20sp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        <TableRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btn_ac"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:text="清屏"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="2"
                />
            <Button
                android:id="@+id/btn_del"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:text="←"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_div"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:text="÷"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btn_7"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="7"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_8"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_9"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="9"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_mul"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="×"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btn_4"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="4"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_5"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="5"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_6"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="6"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_sub"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="－"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btn_1"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#ffcc0000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_add"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="＋"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btn_0"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="2"
                />
            <Button
                android:id="@+id/btn_dot"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="•"
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="0.1"
                />
            <Button
                android:id="@+id/btn_eq"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:text="="
                android:textSize="20sp"
                android:textColor="#ffcc0000"
                android:layout_weight="0.1"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
